<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="horizontal"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/img_publisher_head_url"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
           />

        <ImageButton
            android:id="@+id/btn_goods_selected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/img_publisher_head_url"
            android:layout_alignRight="@+id/img_publisher_head_url"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/goodsselectedright"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_delivery_limited_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="名称"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_goods_price_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:text="参考价: "
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rmb_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:text=" ¥"
                android:textColor="#CC0000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:text="0"
                android:textColor="#CC0000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_already_bought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选: "
                android:textColor="#FF8A19"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF8A19"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_piece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textColor="#FF8A19"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/btn_goods_num_minus"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#336699"
            android:gravity="center"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#FFFFFF" />


        <TextView
            android:id="@+id/btn_goods_num_add"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#336699"
            android:gravity="center"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>