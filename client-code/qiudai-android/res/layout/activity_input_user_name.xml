<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#336699"
        android:gravity="center"
        android:text="输入用户名"
        android:textColor="#FFFFFF"
        android:textSize="20dp" >
    </TextView>

    <RelativeLayout
        android:id="@+id/layout_username"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@id/txt_username"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/edit" >

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:hint="@string/inputYourUsername"
            android:paddingLeft="4dip"
            android:singleLine="true" >
        </EditText>

        <ImageView
            android:id="@+id/img_username_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="9dp"
            android:contentDescription="@drawable/close_pushbanner"
            android:src="@drawable/close_pushbanner"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignLeft="@id/layout_username"
        android:layout_alignRight="@id/layout_username"
        android:layout_below="@id/layout_username"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="@string/nextStep"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>