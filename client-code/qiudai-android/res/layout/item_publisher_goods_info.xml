<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:padding="10dp" >
	
    <ImageView
        android:id="@+id/img_publisher_head_url"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp" />
    
    <TextView
        android:id="@+id/txt_delivery_limited_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        
        android:layout_marginTop="5dp"

        android:layout_alignTop="@id/img_publisher_head_url"
        android:layout_toRightOf="@id/img_publisher_head_url"
        
        android:text="商品名称"
        android:textSize="18sp"
        android:textColor="#ff000000" />
    
    <TextView
        android:id="@+id/txt_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignLeft="@id/txt_delivery_limited_time"
        android:layout_alignBottom="@id/img_publisher_head_url"
        android:layout_marginBottom="5dp"
        
        android:text="商品价格"
        
        android:textSize="16sp"
        android:textColor="#ff555555" />
    <TextView
        android:id="@+id/txt_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/txt_goods_price"
        
        android:text="购买数量"
        android:textSize="14sp"
        android:textColor="#ff555555" />
   
    
    
    

</RelativeLayout>